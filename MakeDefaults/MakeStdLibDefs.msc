BUILD_DIR=$(subst /,\,$(ROOT_DIR))\Build\$(TARGET)\$(subst /,\,$(PACKAGE))\$(lastword $(subst /,\\ ,$(CURDIR)))

ENVIRONMENT=Windows
ARCHITECTURE=x86_cl
EXEEXT=.exe
DLLEXT=.dll
LIBEXT=.lib
OBJEXT=.obj
ASMEXT=.asm
DRVEXT=.drv
GAMEXT=.gam
GCNOEXT=.gcno
GCDAEXT=.gcda
ILKEXT=.ilk
PDBEXT=.pdb
DEFEXT=.def

OBJS=   $(OBJSX:%.x=$(BUILD_DIR)/%.obj) 
OBJS2=  $(OBJSX2:%.x=$(BUILD_DIR)/%.obj) 
OBJS3=  $(OBJSX3:%.x=$(BUILD_DIR)/%.obj) 

PP=   $(PPX:%.x=msc\%.pp) 

#OBJS += $(OBJSXRTTI:%.x=msc\%.rtti.obj) 

OBJS_=  $(OBJSX:%.x=msc/%.obj) 
OBJS2_= $(OBJSX2:%.x=msc/%.obj) 
OBJS3_= $(OBJSX3:%.x=msc/%.obj) 

SUBPROJ = $(SPB:%.x=%.spb)
SUBPROJ2 = $(SPB2:%.x=%.spb)
SUBPROJC = $(SPB:%.x=%.spc)
SUBPROJC += $(SPB2:%.x=%.spc)

MAKE     =   make
COMPILER =   cl 
FCOMPILER =  f77
DEBUG    =   -Zi
OPTIM    =   -W1 -O2 -Ob2
CFLAGSPEC=   -MD -GR -DARCHITECTURE=$(ARCHITECTURE) -DENVIRONMENT=$(ENVIRONMENT) -D_ARCHITECTURE_DIR=Architecture -D_ENVIRONMENT_DIR=Environment
#ASSEMBLER=   -Fa
ASSEMBLER=   
LFLAGS   =   
LOPTS    =  
CFLAGS   =    
FFLAGS   =   
FOPTS    =   -optimize:4

.SUFFIXES:     .cpp .obj  .o .a .lib .exe 

